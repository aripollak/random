{
  "yank.list.maxsize": 50,
  // "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "typescript", "typescriptreact", "python"],
  "typescript.format.enable": false, // use coc-prettier instead of coc-tsserver
  "python.analysis.typeCheckingMode": "off",
  "python.formatting.provider": "black",
  "python.linting.mypyEnabled": true,
  "python.pythonPath": "python3",
  "coc.preferences.rootPatterns": ["package.json", ".git", ".hg"],
  "list.source.grep.args": ["--engine=auto"],
  "list.insertMappings": {
    "<C-t>": "action:tabe"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/circleciconfig": ".circleci/config.yml",
    "https://json.schemastore.org/github-workflow": ".github/workflows/*.yaml",
    "https://json.schemastore.org/travis": ".travis.yml"
  },
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  }
}
