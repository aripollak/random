# vim: sts=8 sw=8 ts=8
[alias]
	# shows you latest commit on all branches, and upstream info:
	b = branch -vv
	cirand = commit .random -m 'update .random'
	co = checkout
	furcate = branch
	grpe = grep
	lg = log --graph
	lgn = log --graph --name-status --find-renames --find-copies
	lgs = log --graph --stat --summary --find-renames --find-copies
	lol = log --oneline
	lolg = log --oneline --graph
	st = status
	sub = submodule
	wdiff = diff --color-words
	wshow = show --color-words
#[branch]
#	# make git pull re-apply your local changes on top of any new commits;
#	# you probably don't want this if you ever merge any other branches.
#	# it's probably okay on a per-repository basis.
#	autosetuprebase = remote
[browser "xdg-open"]
	cmd = xdg-open
[clean]
	requireForce = true
[color]
	# enables color for everything that supports it
	ui = auto
[core]
	excludesfile = ~/.gitconfig-ignore
[diff]
	algorithm = patience
	renames = copies
	submodule = log
[log]
	decorate = short
[merge]
	tool = gvimdiff
[push]
	# Default in git 2.0:
	default = simple
[rebase]
	autosquash = true
	stat = true # shows which files changed when doing a rebase
[url "git://github.com/"]
	# Read-only, e.g. gh:aripollak/random
	insteadOf = gh:
[url "git@github.com:"]
	# With write access
	insteadOf = ghw:
[web]
	browser = xdg-open
