#!/bin/sh -x
# Installs stuff I like after installing a new version of ruby. Make sure to
# select the new version with 'rbenv shell VERSION' first.

gem update --system
gem install bundler foreman gem-browse gem-ctags hookup hub irbtools pry \
    pry-debundle spring spring-commands-rspec spring-commands-testunit table_print \
    travis travis-lint
rbenv rehash
gem ctags
gem rdoc --all
